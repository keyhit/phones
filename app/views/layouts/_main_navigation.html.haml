      %button.navbar-toggle.collapsed{"aria-false" => "false", "data-target" => "#bs-example-navbar-collapse-1 ", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      .navbar-brand= my_phones_link
    / Collect the nav links, forms, and other content for toggling
    #bs-example-navbar-collapse-1.collapse.navbar-collapse
      %ul.nav.navbar-nav.navbar-left
        %li.dropdown
          = render 'layouts/menu/change_locale'
        %li.dropdown
          = render 'layouts/menu/unit_data'
        = render 'layouts/menu/navbar_header'
      %ul.nav.navbar-nav.navbar-right
        = render 'layouts/menu/login'
        = render 'searches/new'
    #bs-example-navbar-collapse-1.collapse.navbar-collapse
      %ul.nav.navbar-nav.navbar-left
        = render 'layouts/menu/links'
