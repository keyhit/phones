= content_for :Main do
  = 'Main'
= content_for :Маin do
  = 'Main'
.row
  .col-md-2
    = render 'branches_all'
  .col-md-10
    .panel.panel-success
      .panel-heading
        %h5 Here is all companies
      %ul.list-group
      - all_organizations.each do |all_organization|
        %li.list-group-item
          - unless all_organization.organizationlogotype_url.nil?
            = image_tag all_organization.organizationlogotype_url, size: "50x35", alt: "company logo"
          = all_organization.id
          = all_organization.branche_id
          = link_to all_organization.name, branch_organization_path(all_organization.id, all_organization.branche_id), :class => 'btn btn-default'
          = all_organization.our_skils

%div
  %label{:for => "awardWon"} Award Won
  %input#awardWon{:list => "awards", :name => "awardWon", :type => "text", :value => "You variant"}/
  %datalist#awards
    %select
      %option{:value => "Best Picture"}
      %option{:value => "Best Director"}
      %option{:value => "Best Adapted Screenplay"}
      %option{:value => "Best Original Screenplay"}
