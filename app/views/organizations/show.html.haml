.navbar.navbar-default{:role=>"navigation"}>
  .container-fluid
    .navbar-header
      .navbar-brand 
        Contact information of
        %b
        = organization.name
        company
    .collapse.navbar-collapse
    #bs-example-navbar-collapse-1
    %ul.nav.navbar-nav
      %li= link_to 'ALL COMPANIES', organizations_path()
      %li= link_to 'DEPARTAMENTS', organization_departaments_path(organization)
= organization.name
= organization.address
= organization.phone
= organization.email
%br/
%table.table
  %caption 
    Departaments of 
    = organization.name
    company
  %tr 
    %td Id
    %td Name
    %td Description
  - departaments.each do |departament|
    %tr
      %td= departament.id
      %td= link_to departament.departament_name, organization_departament_path(organization.id, departament.id)
      %td= departament.departament_description

