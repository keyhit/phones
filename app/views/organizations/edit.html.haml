= content_for :title do
  = 'Editing organization data'
= content_for :edit_organization do
  = 'Editing organization data'
.row
  .col-lg-offset-3.col-lg-6.col-md-offset-3.col-md-6.col-sm-offset-2.col-sm-8.col-xs-12
    .panel.panel-primary
      .panel-heading
        EDIT
      .panel-body
        = bootstrap_form_for organization, url: branch_organization_path(branch, organization), method: :patch do |f|
          = f.text_field :name
          = f.select :branch_id, options_for_select(branches.map{ |c| [c.branch_name, c.id] })
          = f.select :subordinated, options_for_select(all_organizations.map{ |c| [c.name, c.name] })
          = f.select :country, options_for_select(COUNTRIES.map{ |key, value| value })
          = f.text_field :state
          = f.text_field :region
          = f.select :town, options_for_select(SITIES.map{ |key, value| value })
          = f.text_field :street
          = f.text_field :build
          = f.text_field :block
          = f.text_field :office
          = f.url_field  :web_page
          = f.text_area  :our_skils
          = f.label      :organizationlogotype, 'Curent logotype'
          %br
          = image_tag(organization.organizationlogotype_url.to_s, size: "50x30", alt: "my logo")
          = f.file_field :organizationlogotype, :class => "btn btn-default"
          = f.submit :class => "btn btn-primary"
          = link_to 'CANCEL', branch_organization_path(branch, organization), :type=> "button", :class => "btn btn-danger"
