= content_for :title do
  = 'Creating new organization'
= content_for :create_organization do
  = 'Creating new organization'
.row
  .col-lg-offset-3.col-lg-6.col-md-offset-3.col-md-6.col-sm-offset-2.col-sm-8.col-xs-12
    .panel.panel-primary
      .panel-heading
        NEW
      .panel-body
        = bootstrap_form_for :organization, url: branch_organizations_path(current_unit.branch_id), method: :post do |f|
          = f.text_field :name
          = f.select :branch_id, options_for_select(branches.map{ |c| [c.branch_name, c.id] })
          = f.select :subordinated, options_for_select(all_organizations.map{ |c| [c.name, c.name] })
          = f.text_field :country
          = f.text_field :state
          = f.text_field :region
          = f.text_field :town
          = f.text_field :street
          = f.text_field :build
          = f.text_field :block
          = f.text_field :office
          = f.url_field  :web_page
          = f.text_area  :our_skils
          = f.file_field :organizationlogotype, :class => "btn btn-default"
          = f.submit :class => "btn btn-primary"
