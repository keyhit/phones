= content_for :title do
  = 'Creating new organization'
= content_for :create_organization do
  = 'Creating new organization'
.row
  .col-lg-offset-3.col-lg-6.col-md-offset-3.col-md-6.col-sm-offset-2.col-sm-8.col-xs-12
    .panel.panel-primary
      .panel-heading
        NEW
      .panel-body
        = bootstrap_form_for :organization, url: organizations_path do |f|
          = f.text_field :name
          = f.text_field :address
          = f.text_field :phone
          = f.text_field :email
          = f.text_area :our_skils
          = f.file_field :organizationlogotype, :class => "btn btn-default"
          = f.submit :class => "btn btn-primary"
          = link_to 'CANCEL', organizations_path(), :type=> "button", :class => "btn btn-danger"
