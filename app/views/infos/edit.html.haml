= content_for :title do
  = 'Info page'
= content_for :edit_info_page do
  = 'Edit info' 
.row
.col-lg-offset-3.col-lg-6.col-md-offset-3.col-md-6.col-sm-offset-2.col-sm-8.col-xs-12
  .panel.panel-primary
    .panel-heading
      EDIT
    .panel-body 
      = bootstrap_form_for info, url: info_path(), method: :patch do |f|
        = f.text_field :header
        = f.text_area :text
        = f.file_field :myPhoto
        = f.submit :class => "btn btn-primary"
        = link_to 'CANCEL', infos_path(), :type=> "button", :class => "btn btn-danger"