= content_for :title do
  = 'New info page'
= content_for :new_info_page do
  = 'New info'
.row
.col-lg-offset-3.col-lg-6.col-md-offset-3.col-md-6.col-sm-offset-2.col-sm-8.col-xs-12
  .panel.panel-primary
    .panel-heading
      CREATE
    .panel-body 
      = bootstrap_form_for :info, url: infos_path(), method: :post do |f|
        = f.text_field :header
        = f.text_area :text
        = f.file_field :myPhoto
        = f.submit :class => "btn btn-primary"
        = link_to 'CANCEL', infos_path(), :type=> "button", :class => "btn btn-danger"

