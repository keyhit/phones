= content_for :title do
  = 'Creating new departament'
= content_for :create_departament do
  = 'Creating new departament'
.row
  .col-lg-offset-3.col-lg-6.col-md-offset-3.col-md-6.col-sm-offset-2.col-sm-8.col-xs-12
    .panel.panel-primary
      .panel-heading
        CREATION NEW DEPARTAMENT
      .panel-body
        =bootstrap_form_for :departament, url: branch_organization_departaments_path(branch, organization), method: :post do |f|
          = f.text_field :departament_name
          = f.select :subordinated, options_for_select(organization.departaments.map{ |c| [c.departament_name, c.departament_name] })
          = f.text_area :departament_description
          = f.file_field :departamentlogotype, :class => "btn btn-default"
          = f.hidden_field :branch_id, value: params[:branch_id]
          = f.hidden_field :organization_id, value: params[:organization_id]
          = f.submit :class => "btn btn-primary"
          - if !organization.departaments.empty?
            = link_to 'CANCEL', branch_organization_departaments_path(branch, organization), :type=> "button", :class => "btn btn-danger"
