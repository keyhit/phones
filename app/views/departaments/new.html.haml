= content_for :title do
  = 'Creating new departament'
= content_for :create_departament do
  = 'Creating new departament'
.row
  .col-lg-offset-3.col-lg-6.col-md-offset-3.col-md-6.col-sm-offset-2.col-sm-8.col-xs-12
    .panel.panel-primary
      .panel-heading
        NEW
      .panel-body
        =bootstrap_form_for :departament, url: organization_departaments_path(organization) do |f|
          - if organization.departaments.blank?
            = f.text_field :departament_name, value: 'Departament name'
          - else
            = f.text_field :departament_name
          = f.text_area :departament_description
          = f.file_field :departamentlogotype, :class => "btn btn-default"
          = f.submit :class => "btn btn-primary"
          - if !organization.departaments.empty?
            = link_to 'CANCEL', organization_departaments_path(organization), :type=> "button", :class => "btn btn-danger"
