.panel.panel-primary
  .panel-heading
    EDIT
  .panel-body
    = bootstrap_form_for departament, url: organization_departament_path([organization, departament]) do |f|
      = f.text_field :departament_name
      = f.text_area :departament_description
      = f.submit :class => "btn btn-primary"
      = link_to 'CANCEL', organization_departaments_path(organization), :type=> "button", :class => "btn btn-danger"