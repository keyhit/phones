= content_for :title do
  = 'Recovering password'
= content_for :authentication do
  = 'Authentication'
.row
  .col-lg-offset-4.col-lg-4.col-md-offset-3.col-md-6.col-sm-offset-2.col-sm-8.col-xs-12
    .panel.panel-primary
      .panel-heading
        = t '.forgot_your_password'
      .panel-body 
      = bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
        = devise_error_messages!
        .field
          = f.email_field :email, autofocus: true
        .actions
          = f.submit t '.send_me_reset_password_instructions'
      = render "devise/shared/links"
