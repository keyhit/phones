= content_for :title do
  = 'Edit unit data'
= content_for :edit_unit do
  = 'Edit unit data'
/.html_safe
.row
  .col-lg-offset-3.col-lg-6.col-md-offset-3.col-md-6.col-sm-offset-2.col-sm-8.col-xs-12
    .panel.panel-primary
      .panel-heading
        EDIT UNIT DATA (fields, markered "*", must be fulled)
      .panel-body 
        = bootstrap_form_for unit, url: branch_organization_departament_unit_path(branch, organization, departament, unit), method: :patch do |f|
          = f.label :name, "Name * "
          %em (1 character minimum, 80 characters maximum)
          = f.text_field :name, hide_label: true
          = f.label :surename, "Surename * "
          %em (1 character minimum, 80 characters maximum)
          = f.text_field :surename, hide_label: true
          = f.label :surename, "Patronymic"
          %em (80 characters maximum)
          = f.text_field :patronymic, hide_label: true
          %legend
          = f.select :subordinated, departament.units.all.collect{ |c| [c.name] }, {include_blank: unit.subordinated}
          = f.select :departament_id, all_organizations_departaments.all.collect {|p| [ p.departament_name, p.id ] }, { selected: params[:departament_id]}
          = f.label :post, "Post * "
          %em (5 character minimum, 80 characters maximum)
          = f.text_area :post, hide_label: true
          = f.email_field :email
          = link_to 'Change password', new_password_path()
          = f.email_field :secondary_email
          = f.telephone_field :primary_phone_number
          = f.telephone_field :secondary_phone_number
          = f.telephone_field :short_phone_nunber
          = f.telephone_field :fax
          = f.telephone_field :home_phone_number
          = f.url_field :web_page
          = f.time_field :start_work
          = f.time_field :finish_work
          = f.text_field :working_days, list: 'first-name', value: unit.working_days
          %datalist#first-name
            %option{:value => 'Mon-Fri'}
            %option{:value => 'Day work two rest'}
            %option{:value => 'Vacation'}
            %option{:value => 'Fired'}
          = f.date_field :birthday
          = f.file_field :unitphoto
          = f.text_area :characteristic
          - if role_1
            = f.select(:role, options_for_select([[unit.role], ['global_admin', 'global_admin'], ['global_moderator', 'global_moderator'], ['organization_admin', 'organization_admin'], ['organization_moderator', 'organization_moderator'], ['departament_admin', 'departament_admin'], ['departament_moderator', 'departament_moderator'], ['user', 'user']]))
          -elsif role_2
            = f.select(:role, options_for_select([[unit.role], ['organization_admin', 'organization_admin'], ['organization_moderator', 'organization_moderator'], ['departament_admin', 'departament_admin'], ['departament_moderator', 'departament_moderator'], ['user', 'user']]))
          - elsif role_3
            = f.select(:role, options_for_select([[unit.role], ['organization_admin', 'organization_admin'], ['organization_moderator', 'organization_moderator'], ['departament_admin', 'departament_admin'], ['departament_moderator', 'departament_moderator'], ['user', 'user']]))
          - elsif role_4
            = f.select(:role, options_for_select([[unit.role], ['departament_admin', 'departament_admin'], ['departament_moderator', 'departament_moderator'], ['user', 'user']]))
          - elsif role_5
            = f.select(:role, options_for_select([[unit.role], ['departament_moderator', 'departament_moderator'], ['user', 'user']]))
          = f.hidden_field :branch_id
          = f.hidden_field :organization_id, value: params[:organization_id]
          = f.submit :class => "btn btn-primary", data: { "disable-with": "Saving..." }
          = link_to 'CANCEL', branch_organization_departament_unit_path(branch, organization, departament, unit), :type=> "button", :class => "btn btn-danger"
