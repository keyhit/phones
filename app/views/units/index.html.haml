%h5 this all units
= link_to 'Organization list', organizations_path()
= link_to 'My company', organization_path(id: organization.id)
= link_to 'departaments', organization_departaments_path()
= link_to 'add new unit', new_organization_departament_unit_path()
%table.table-striped
  %tr
    %th Unit name
    %th{:colspan=>"3"} Action
  - units.each do |unit|
    %tr
      %td= unit.full_name
      %td= link_to 'detail', organization_departament_unit_path(id: unit.id)
      %td= link_to 'edit', edit_organization_departament_unit_path(id: unit.id)
      %td= link_to 'destroy', organization_departament_unit_path(id: unit.id), method: :delete
